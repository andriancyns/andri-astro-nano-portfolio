---
import GiscusComments from '../../../components/GiscusComments.astro';
import { type CollectionEntry, getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import FormattedDate from "@components/FormattedDate.astro";
import { readingTime, getWordCount, getReadingTimeMinutes } from "@lib/utils";
import BackToPrev from "@components/BackToPrev.astro";
import ViewCounter from "@components/ViewCounter.astro";
import BlogContent from "@components/BlogContent.astro";
import { getTitleByLang, getDescriptionByLang } from "../../../lib/translations";
import { type Language } from "../../../i18n";

export async function getStaticPaths() {
  const posts = (await getCollection("blog"))
    .filter(post => !post.data.draft)
    .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content } = await post.render();

// Extract tags from frontmatter
const tags = post.data.tags || [];
const wordCount = getWordCount(post.body);
const readingTimeDuration = getReadingTimeMinutes(post.body);
const currentLang: Language = 'en';

// Get translated title and description
const displayTitle = getTitleByLang(post.slug, currentLang, post.data.titleEn || post.data.title);
const displayDescription = getDescriptionByLang(post.slug, currentLang, post.data.descriptionEn || post.data.description);

// Breadcrumb items for blog post
const breadcrumbItems = [
  { name: "Home", url: "/en/" },
  { name: "Blog", url: "/en/blog" },
  { name: displayTitle, url: `/en/blog/${post.slug}` }
];
---

<PageLayout 
  title={`${displayTitle} | Blog Andrian Cahyono`} 
  description={displayDescription} 
  image={post.data.image ?? "/astro-nano.png"}
  structuredDataType="article"
  datePublished={post.data.date}
  dateModified={post.data.date}
  author="Andrianto Cahyono Putro"
  readingTime={readingTimeDuration}
  wordCount={wordCount}
  tags={tags}
  breadcrumbItems={breadcrumbItems}
  currentLang={currentLang}
>
  <Container>
    <div class="animate">
      <BackToPrev href="/en/blog">
        Back to blog
      </BackToPrev>
    </div>
    <div class="space-y-1 my-10">
      <div class="animate flex items-center gap-1.5">
        <div class="font-base text-sm">
          <FormattedDate date={post.data.date} />
        </div>
        &bull;
        <div class="font-base text-sm">
          {readingTime(post.body)}
        </div>
        &bull;
        <ViewCounter slug={post.slug} />
      </div>
      <div class="animate text-2xl font-semibold text-black dark:text-white">
        {displayTitle}
      </div>
    </div>
    <article class="animate">
      <BlogContent slug={post.slug} lang={currentLang} originalContent={{ Content }} />
    </article>
    <GiscusComments />
  </Container>
</PageLayout>