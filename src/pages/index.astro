      <!-- Projects -->
      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            {t('home.recent_projects')}
          </h5>
          <Link href="/projects">
            {t('home.see_all_projects')}
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {projects.map(project => (
            <li>
              <ArrowCard entry={project} lang={currentLang} />
            </li>
          ))}
        </ul>
      </section>

      <!-- Blog -->
      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            {t('home.latest_posts')}
          </h5>
          <Link href="/blog">
            {t('home.see_all_posts')}
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {blog.map(post => (
            <li>
              <ArrowCard entry={post} lang={currentLang} />
            </li>
          ))}
        </ul>
      </section>

      <!-- Connect -->
      <section class="animate space-y-4">
        <h5 class="font-semibold text-black dark:text-white">
          {t('home.connect')}
        </h5>
        <article>
          <p>
            {t('home.connect_text')}
          </p>
        </article>
        <ul class="flex flex-wrap gap-2">
          {SOCIALS.map(SOCIAL => (
            <li class="flex gap-x-2 text-nowrap">
              <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}>
                {SOCIAL.NAME}
              </Link>
              {"/"}
            </li>
          ))}
          <li class="line-clamp-1">
            <Link href={`mailto:${SITE.EMAIL}`} aria-label={`Email ${SITE.NAME}`}>
              {SITE.EMAIL}
            </Link>
          </li>
          <li class="line-clamp-1">
            <Link href="/files/resume-andriancyns-software-engineer.pdf" download="resume-andriancyns-software-engineer.pdf" aria-label="Download Portfolio">
              {t('home.download_resume')}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
