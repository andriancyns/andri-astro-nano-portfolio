  <!-- Modal Overlay for Dropdown -->
  <div
    id="dropdown-overlay"
    class="fixed inset-0 z-40 hidden"
    aria-hidden="true"
  >
  </div>

  <!-- Dropdown Portal Container -->
  <div id="dropdown-container" class="fixed z-50 hidden">
    <div
      id="dropdown-content"
      class="glass-dropdown rounded-xl p-2 min-w-64 max-w-sm"
    >
      <div class="text-xs opacity-50 uppercase tracking-wider px-3 py-2">
        Choose platform
      </div>
      <div id="dropdown-links"></div>
    </div>
  </div>

  <style>
    .glass-card {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(16px);
      -webkit-backdrop-filter: blur(16px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .glass-button {
      padding: 1rem;
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 1rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
      cursor: pointer;
      width: 100%;
    }

    .glass-button::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.1),
        transparent
      );
      transition: left 0.5s;
    }

    .glass-button:hover {
      transform: translateY(-2px) scale(1.01);
      border-color: rgba(255, 255, 255, 0.2);
      box-shadow:
        0 12px 40px rgba(0, 0, 0, 0.15),
        0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    .glass-button:hover::before {
      left: 100%;
    }

    .glass-button.active {
      border-color: rgba(34, 197, 94, 0.5);
      box-shadow: 0 0 20px rgba(34, 197, 94, 0.2);
    }

    .glass-button.active .chevron-icon {
      transform: rotate(180deg);
    }

    .glass-dropdown {
      background: rgba(20, 20, 20, 0.98);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.15);
      box-shadow:
        0 20px 60px rgba(0, 0, 0, 0.5),
        0 0 0 1px rgba(255, 255, 255, 0.1);
      animation: dropdownFadeIn 0.2s ease-out;
    }

    @keyframes dropdownFadeIn {
      from {
        opacity: 0;
        transform: translateY(-8px) scale(0.95);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    .dropdown-link {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.875rem 1rem;
      border-radius: 0.75rem;
      transition: all 0.2s ease;
      color: inherit;
      text-decoration: none;
    }

    .dropdown-link:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    .glass-social {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.875rem;
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 1rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .glass-social:hover {
      transform: translateY(-2px);
      background: rgba(255, 255, 255, 0.1);
      border-color: rgba(255, 255, 255, 0.2);
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .line-clamp-1 {
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 1;
    }

    /* Light mode adjustments */
    :global(.light) .glass-card,
    :global(.light) .glass-button,
    :global(.light) .glass-social {
      background: rgba(255, 255, 255, 0.7);
      border-color: rgba(0, 0, 0, 0.1);
    }

    :global(.light) .glass-button:hover,
    :global(.light) .glass-social:hover {
      background: rgba(255, 255, 255, 0.9);
      border-color: rgba(0, 0, 0, 0.15);
    }

    :global(.light) .glass-dropdown {
      background: rgba(255, 255, 255, 0.98);
      border-color: rgba(0, 0, 0, 0.1);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    }

    :global(.light) .dropdown-link:hover {
      background: rgba(0, 0, 0, 0.05);
    }
  </style>

  <script is:inline define:vars={{ products }}>
    document.addEventListener("DOMContentLoaded", () => {
      const buttons = document.querySelectorAll("[data-product-id]");
      const overlay = document.getElementById("dropdown-overlay");
      const container = document.getElementById("dropdown-container");
      const linksContainer = document.getElementById("dropdown-links");

      let activeButton = null;

      function closeDropdown() {
        if (container) container.classList.add("hidden");
        if (overlay) overlay.classList.add("hidden");
        if (activeButton) {
          activeButton.classList.remove("active");
          activeButton = null;
        }
      }

      function openDropdown(button, productIndex) {
        const product = products[productIndex];
        if (!product || !product.links || product.links.length <= 1) return;

        // Build links HTML
        let linksHtml = "";
        product.links.forEach((link) => {
          linksHtml += `
            <a href="${link.url}" target="_blank" rel="noopener noreferrer" class="dropdown-link">
              <span class="text-lg">${link.icon}</span>
              <span class="font-medium flex-1">${link.platform}</span>
              <svg class="w-4 h-4 opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          `;
        });

        if (linksContainer) linksContainer.innerHTML = linksHtml;

        // Position dropdown below button
        const rect = button.getBoundingClientRect();
        const scrollY = window.scrollY;

        if (container) {
          container.style.top = rect.bottom + scrollY + 8 + "px";
          container.style.left = rect.left + "px";
          container.style.width = rect.width + "px";
          container.classList.remove("hidden");
        }

        if (overlay) overlay.classList.remove("hidden");

        activeButton = button;
        button.classList.add("active");
      }

      buttons.forEach((button) => {
        button.addEventListener("click", (e) => {
          e.stopPropagation();

          const hasOptions = button.getAttribute("data-has-options") === "true";
          const singleLink = button.getAttribute("data-single-link");
          const productId = button.getAttribute("data-product-id");

          if (!hasOptions && singleLink) {
            window.open(singleLink, "_blank");
            return;
          }

          if (!productId) return;

          const productIndex = parseInt(productId.replace("product-", ""));

          if (activeButton === button) {
            closeDropdown();
          } else {
            closeDropdown();
            openDropdown(button, productIndex);
          }
        });
      });

      // Close on overlay click
      if (overlay) {
        overlay.addEventListener("click", closeDropdown);
      }

      // Close on escape key
      document.addEventListener("keydown", (e) => {
        if (e.key === "Escape") closeDropdown();
      });

      // Close on scroll
      window.addEventListener("scroll", closeDropdown);
    });
  </script>
</PageLayout>
