            Andrian Cahyono
          </h1>
          <p class="text-sm opacity-70">Software Engineer ‚Ä¢ Digital Creator</p>
        </div>
      </div>

      <!-- Digital Products -->
      <div class="space-y-3 animate">
        <h2
          class="text-sm font-medium opacity-50 uppercase tracking-wider text-center"
        >
          Digital Products
        </h2>
        {
          products.map((product) => (
            <a
              href={product.link}
              target="_blank"
              rel="noopener noreferrer"
              class="block p-4 border border-black/10 dark:border-white/10 rounded-xl hover:border-black/25 dark:hover:border-white/25 hover:bg-black/5 dark:hover:bg-white/5 transition-all group"
            >
              <div class="flex items-center gap-4">
                <span class="text-2xl">{product.icon}</span>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2">
                    <span class="font-medium text-black dark:text-white truncate">
                      {product.name}
                    </span>
                    {product.badge && (
                      <span class="px-2 py-0.5 text-xs bg-green-500/20 text-green-600 dark:text-green-400 rounded-full">
                        {product.badge}
                      </span>
                    )}
                  </div>
                  {product.description && (
                    <p class="text-sm opacity-60 truncate">
                      {product.description}
                    </p>
                  )}
                </div>
                <div class="flex items-center gap-2">
                  <span
                    class={`text-sm font-medium ${product.price === "Free" ? "text-green-600 dark:text-green-400" : "text-black dark:text-white"}`}
                  >
                    {product.price}
                  </span>
                  <svg
                    class="w-4 h-4 opacity-40 group-hover:opacity-100 transition-opacity"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                    />
