  <style>
    .glass-card {
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.08);
    }

    .product-card {
      border-radius: 0.75rem;
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.08);
      transition: all 0.2s ease;
      overflow: hidden;
    }

    .product-card:hover {
      background: rgba(255, 255, 255, 0.06);
      border-color: rgba(255, 255, 255, 0.12);
    }

    .product-card-single:hover {
      background: rgba(34, 197, 94, 0.08);
      border-color: rgba(34, 197, 94, 0.25);
      transform: translateY(-1px);
    }

    .product-card-expand .product-header {
      cursor: pointer;
    }

    .product-card-expand.expanded {
      border-color: rgba(34, 197, 94, 0.25);
    }

    .product-card-expand.expanded .chevron {
      transform: rotate(180deg);
    }

    .product-options {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.25s ease-out;
    }

    .product-card-expand.expanded .product-options {
      max-height: 100px;
    }

    .platform-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.375rem;
      flex: 1;
      padding: 0.5rem 0.75rem;
      background: rgba(255, 255, 255, 0.06);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 0.5rem;
      font-size: 0.75rem;
      transition: all 0.15s ease;
    }

    .platform-btn:hover {
      background: rgba(34, 197, 94, 0.12);
      border-color: rgba(34, 197, 94, 0.3);
    }

    .social-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.625rem;
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 0.625rem;
      transition: all 0.15s ease;
    }

    .social-btn:hover {
      background: rgba(255, 255, 255, 0.08);
      transform: translateY(-1px);
    }

    :global(.light) .glass-card,
    :global(.light) .product-card,
    :global(.light) .social-btn {
      background: rgba(255, 255, 255, 0.6);
      border-color: rgba(0, 0, 0, 0.08);
    }

    :global(.light) .product-card-single:hover,
    :global(.light) .product-card-expand.expanded {
      background: rgba(34, 197, 94, 0.08);
    }

    :global(.light) .platform-btn {
      background: rgba(0, 0, 0, 0.04);
      border-color: rgba(0, 0, 0, 0.08);
    }

    :global(.light) .platform-btn:hover {
      background: rgba(34, 197, 94, 0.1);
    }
  </style>

  <script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const expandables = document.querySelectorAll("[data-expandable]");

      expandables.forEach((card) => {
        const toggle = card.querySelector("[data-toggle]");
        if (!toggle) return;

        toggle.addEventListener("click", () => {
          // Close other expanded cards
          expandables.forEach((other) => {
            if (other !== card) other.classList.remove("expanded");
          });
          // Toggle current
          card.classList.toggle("expanded");
        });
      });
    });
  </script>
</PageLayout>
