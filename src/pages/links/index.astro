          ))
        }
      </div>

      <!-- Social Links -->
      <div class="space-y-3 animate">
        <h2
          class="text-sm font-medium opacity-50 uppercase tracking-wider text-center"
        >
          Connect
        </h2>
        <div class="grid grid-cols-2 gap-3">
          {
            socials.map((social) => (
              <a
                href={social.link}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center gap-2 p-3 border border-black/10 dark:border-white/10 rounded-xl hover:border-black/25 dark:hover:border-white/25 hover:bg-black/5 dark:hover:bg-white/5 transition-all"
